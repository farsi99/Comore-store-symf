<div class="col-lg-3 col-md-4 col-6">
	<div class="product">
		{% if product.quantity <= 0 %}
			<span class="epuise">Epuisé</span>
		{% endif %}
		<div class="product_img">
			<a href="{{path('product_detail',{'slug': product.slug})}}">
				<img height="254" src="assets/upload/products/{{product.image}}" alt="product_img1">
			</a>
			<div class="product_action_box">
				<ul class="list_none pr_action_btn">
					{% if product.quantity <= 0 %}
						<li>
							<a href="{{path('alert_product',{'id':product.id})}}" class="" title="être avertie quand ça sera disponible">
								<i class="icon-bell"></i>
							</a>
						</li>
					{% endif %}
					{% if product.quantity > 0 %}
						<li class="add-to-cart">
							<a href="{{path('add_cart', {'id': product.id })}}">
								<i class="icon-basket-loaded"></i>
								Ajouter au panier</a>
						</li>
					{% endif %}
					<li>
						<a href="" class="">
							<i class="icon-shuffle"></i>
						</a>
					</li>
					<li>
						<a href="{{path('product_detail',{'slug': product.slug})}}" class="">
							<i class="icon-magnifier-add"></i>
						</a>
					</li>
					<li>
						<a href="{{path('add_favoris',{'id': product.id})}}">
							<i class="icon-heart"></i>
						</a>
					</li>
				</ul>
			</div>
		</div>
		<div class="product_info">
			<h6 class="product_title">
				<a href="">{{product.name}}</a>
			</h6>
			<div class="product_price">
				<span class="price">{{product.price / 100 }}
					€</span>
				<del>{{ product.price * 1.35 }}€
				</del>
				<div class="on_sale">
					<span>35% Off</span>
				</div>
			</div>
			<div class="rating_wrap">
				<div class="rating">
					<div class="product_rate" style="width:80%"></div>
				</div>
				<span class="rating_num">({{product.reviewsProducts | length }})</span>
			</div>
			<div class="pr_desc">
				<p>{{ product.description }}</p>
			</div>
			<div class="pr_switch_wrap">
				<div class="product_color_switch">
					<span class="active" data-color="#87554B"></span>
					<span data-color="#333333"></span>
					<span data-color="#DA323F"></span>
				</div>
			</div>
		</div>
	</div>
</div>
