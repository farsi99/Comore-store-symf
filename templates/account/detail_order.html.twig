{% extends 'base.html.twig' %}

{% block title %}Détail commande
{% endblock %}

{% block body %}

	{{  include ("partials/title_section.html.twig", {'name': 'Détail commande' }) }}
	<div class="section">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<em>Reference:
						{{order.reference }}</em><br>
					<em>Date de la commande:
						{{order.createdAt | date('d/m/Y')}}</em>
				</div>
				<div class="col-12">
					<div class="table-responsive shop_cart_table">
						<table class="table">
							<thead>
								<tr>
									<th class="product-thumbnail">&nbsp;</th>
									<th class="product-name">Produit</th>
									<th class="product-price">Prix</th>
									<th class="product-quantity">Quantité</th>
									<th class="product-subtotal">Total HT</th>
									<th class="product-subtotal">TVA(20%)</th>
									<th class="product-subtotal">Total TTC</th>
								</tr>
							</thead>
							<tbody>
								{% if details %}
									{% for detail in details %}
										<tr>
											<td class="product-thumbnail">{{detail.id}}</td>
											<td class="product-name" data-title="Product">
												<a href="#">{{detail.productName}}</a>
											</td>
											<td class="product-price" data-title="Price">{{detail.productPrice  }}
												€</td>
											<td class="product-quantity" data-title="Quantity">
												{{detail.productQuantity}}
											</td>
											<td class="product-subtotal" data-title="Total">{{detail.subTotalht}}
												€</td>
											<td class="product-subtotal" data-title="Total">{{detail.taxe}}
												€</td>
											<td class="product-subtotal" data-title="Total">{{detail.subTotalttc}}
												€</td>

										</tr>
									{% endfor %}
								{% else %}
									<p>Votre panier est vide</p>
								{% endif %}
							</tbody>
						</table>
					</tbody>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="medium_divider"></div>
				<div class="divider center_icon">
					<i class="ti-shopping-cart-full"></i>
				</div>
				<div class="medium_divider"></div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6"></div>
			<div class="col-md-6">
				<div class="border p-3 p-md-4">
					<div class="heading_s1 mb-3">
						<h6>Total</h6>
					</div>
					<div class="table-responsive">
						<table class="table">
							<tbody>
								<tr>
									<td class="cart_total_label">sous-total HT</td>
									<td class="cart_total_amount">{{ order.subtotalht / 100}}
										€</td>
								</tr>
								<tr>
									<td class="cart_total_label">TVA (20%)</td>
									<td class="cart_total_amount">{{ order.taxe / 100 }}
										€</td>
								</tr>
								<tr>
									<td class="cart_total_label">Livraison ({{order.carrierName}})</td>
									<td class="cart_total_amount">{{order.carrierPrice /100 }}
										€</td>
								</tr>
								<tr>
									<td class="cart_total_label">Total TTC</td>
									<td class="cart_total_amount">
										<strong>{{ order.subtotalttc / 100 }}</strong>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<a href="{{path('account')}}" class="btn btn-fill-out">Retour sur commande</a>
				</div>
			</div>
		</div>
	</div>
</div></div>{% endblock %}
