{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe
{% endblock %}

{% block body %}

	{{ include ("partials/title_section.html.twig", {'name':'changer mon mot de passe'}) }}

	<div class="login_register_wrap section">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-xl-6 col-md-10">
					<div class="login_wrap">
						<div class="padding_eight_all bg-white">
							<div class="">
								<h3>Réinitialiser mon mot de passe</h3>
							</div>
							<div class="content">
								{% for flashError in app.flashes('reset_password_error') %}
									<div class="alert alert-danger" role="alert">{{ flashError }}</div>
								{% endfor %}
								{{ form_start(requestForm) }}
								{{ form_row(requestForm.email,{'attr':{'placeholder':'votre email'}}) }}
								<div>
									<small>
										Entrez votre adresse email et nous vous enverrons un lien pour réinitialiser votre mot de passe.
									</small>
								</div>

								<button class="btn btn-fill-out btn-block">Valider</button>
								{{ form_end(requestForm) }}
							</div>
							<div class="form-note text-center">Vous n'avez pas de compte?
								<a href="{{ path('app_register')}}">S'inscrire</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
